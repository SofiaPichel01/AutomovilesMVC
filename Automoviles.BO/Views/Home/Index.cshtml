@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_Layout";
}
<link href="~/css/homePage.css" rel="stylesheet" />

<!--CAROUSEL-->
<div class="homepage-carousel-container">
    <div id="carouselExampleDark" class="carousel carousel-dark slide" data-bs-ride="carousel">
        <div class="carousel-indicators">
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="0" class="active" aria-current="true" aria-label="Slide 1"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="1" aria-label="Slide 2"></button>
            <button type="button" data-bs-target="#carouselExampleDark" data-bs-slide-to="2" aria-label="Slide 3"></button>
        </div>
        <div class="carousel-inner">
            <div class="carousel-item active">
                <img src="~/img/redcar2.jpg" class="d-block w-100" alt="...">
            </div>
            <div class="carousel-item">
                <img src="~/img/redsuv1.jpg" class="d-block w-100" alt="...">

            </div>
            <div class="carousel-item">
                <img src="~/img/redmotorbike1.jpg" class="d-block w-100" alt="..." />
            </div>
        </div>
        <button class="carousel-control-prev" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleDark" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>
    </div>

</div>

<!--QUIENES SOMOS -->
<div class="empresa-container">
    <div class="text-center">
        <h1 class="title-quienesSomos">¿Quiénes somos?</h1>
    </div>

    <div class="quienesSomos-container ">
        <div class="text-quienesSomos-container">

            <h2>AutoNet</h2>
            <p> Nuestra empresa se dedica desde el año 2005 a la venta de los mejores autos del mercado, nuevos, usados premium y clásicos.</p>
            <p>Siempre seleccionando las mejores unidades para vos!</p>
            <p>Destacamos nuestra atención personalizada, la seriedad y trayectoria de más de 17 años haciendo nuestra marca un referente donde consultar tu próxima compra o venta.</p>


        </div>
        <img class="img-quienesSomos-container" src="~/img/inmobiliaria.jpg" />

    </div>
</div>

<!--CARDS-->
<div class="container card-container">
    <h1 class="title-card text-center">En nuestra tienda encontrarás los mejores vehículos del mercado, nuevos, usados premium y clásicos.</h1>

    <div class="card" >
        <img src="~/img/redcar3.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Autos</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a asp-controller="Vehiculos" asp-action="Index" class="btn card-btn btn-outline-danger">Ver autos</a>
        </div>
    </div>
    
    <div class="card" >
        <img src="~/img/redmotorbike2 (1).jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Motos</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a asp-controller="Vehiculos" asp-action="Index" class="btn card-btn btn-outline-danger">Ver motos</a>
        </div>
    </div>

    <div class="card" >
        <img src="~/img/redvan.jpg" class="card-img-top" alt="...">
        <div class="card-body">
            <h5 class="card-title">Camionetas</h5>
            <p class="card-text">Some quick example text to build on the card title and make up the bulk of the card's content.</p>
            <a asp-controller="Vehiculos" asp-action="Index" class="btn card-btn btn-outline-danger">Ver camionetas</a>
        </div>
    </div>
</div>

