@model Automoviles.Models.Vehiculo

@{
    ViewData["Title"] = "Details";
}

<link href="~/css/homePage.css" rel="stylesheet" />
<link href="~/css/site.css" rel="stylesheet" />


<div class="container">
    <h1>Detalles</h1>
    <div>
        <h4>Vehiculo</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Nombre)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FechaDeLanzamiento)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FechaDeLanzamiento)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Marca)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Marca.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Tipo)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Tipo.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Pais)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Pais.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Seguro)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Seguro.Empresa)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Color)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Color.Nombre)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Combustible)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Combustible.Nombre)
            </dd>
        </dl>
    </div>
    <div>
        <a class="lblModificarVolverLista" asp-action="Edit" asp-route-id="@Model.Id">Modificar</a> |
        <a class="lblModificarVolverLista" asp-action="Index">Volver a lista</a>
    </div>
</div>